<%= render 'layouts/header' %>

<p>
  <strong>Year:</strong>
  <%= @car.year %>
</p>

<p>
  <strong>Make:</strong>
  <%= @car.make %>
</p>
 
<p>
  <strong>Model:</strong>
  <%= @car.model %>
</p>

<p>
  <strong>Drivetrain:</strong>
  <%= @car.drivetrain %>
</p>

<p>
  <strong>Engine:</strong>
  <%= @car.engine %>
</p>
 
<p>
  <strong>Fueltype:</strong>
  <%= @car.fueltype %>
</p>

<p>
  <strong>Price:</strong>
  <%= @car.price %>
</p>
 
<p>
  <strong>Mileage:</strong>
  <%= @car.mileage %>
</p>

<button class= "btn btn-primary blue-color"> <%= link_to 'Update Vehicle', edit_car_path(@car) %></button>
<button class="btn btn-danger" type="button" ><%= link_to 'Delete Vehicle', car_path(@car), method: :delete, 
                    data: { confirm: 'Are you sure you want to delete this vehicle?' } %></button>
