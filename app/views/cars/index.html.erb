<%= render 'layouts/header' %>

<h1 class="font-weight-light">Cars Inventory</h1>

<table>
    <tr>
        <th>Year</th>
        <th>Make</th>
        <th>Model</th>
        <th>Drivetrain</th>
        <th>Engine</th>
        <th>Fueltype</th>
        <th>Price</th>
        <th>Mileage</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>

    <% @cars.each do |car| %>
        <tr>
            <td><%= car.year %> </td>
            <td><%= car.make %> </td>
            <td><%= car.model %> </td>
            <td><%= car.drivetrain %> </td>
            <td><%= car.engine %> </td>
            <td><%= car.fueltype %> </td>
            <td><%= car.price %> </td>
            <td><%= car.mileage %> </td>

            <td><%= link_to 'Read More', car_path(car) %></td>
            <td><%= link_to 'Edit', edit_car_path(car) %></td>
            <td><%= link_to 'Delete Vehicle', car_path(car), method: :delete, 
                    data: { confirm: 'Are you sure you want to delete this vehicle?' } %>
        </tr>
    <% end %>
</table>